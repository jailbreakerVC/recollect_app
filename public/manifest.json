{
  "manifest_version": 3,
  "name": "Bookmark Manager Extension",
  "version": "1.0.0",
  "description": "Access and sync your Chrome bookmarks with the Bookmark Manager web app",
  "permissions": [
    "bookmarks",
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "http://localhost:*/*",
    "https://your-domain.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["http://localhost:*/*", "https://your-domain.com/*"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Bookmark Manager"
  },
  "icons": {

  }
}